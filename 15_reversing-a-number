//program to reverse the order of the input number


#include <iostream>  
using namespace std;  
int main()  
{  
int n, reverse=0, r;    
cout<<"Enter a number: ";    
cin>>n;    
cout << "You have entered : " << n <<endl;
  while(n!=0)    
  {    
     r=n%10;      
     reverse = reverse*10 + r;    
     n/=10;    
  }    
 cout<<"The Reversed Number: "<<reverse<<endl;     
return 0;  
}  
